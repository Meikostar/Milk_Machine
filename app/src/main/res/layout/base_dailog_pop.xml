<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#42000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="130dp"
        android:background="@drawable/white_retagle"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_message"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/green2_retagle"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="提示"
                android:textColor="@color/white"
                android:textSize="19.5sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35dp"
            android:layout_marginTop="25dp"
            android:gravity="center_horizontal"
            android:text="亲，设备与手机连接已断开"
            android:textColor="@color/a0"
            android:textSize="15.5sp" />

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5.7dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="19dp"
                android:layout_marginLeft="26dp"

                android:layout_marginRight="26dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button

                    android:id="@+id/bt_left"
                    android:layout_width="106dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/geen_selectors"
                    android:gravity="center"
                    android:text="立即重连"
                    android:textColor="@color/white"
                    android:textSize="15.3sp" />

                <Button

                    android:id="@+id/bt_right"
                    android:layout_width="106dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/geen_selectors"
                    android:gravity="center"
                    android:text="稍后再试"
                    android:textColor="@color/white"
                    android:textSize="15.3sp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>