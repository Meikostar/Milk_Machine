<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <com.canplay.milk.view.NavigationBar
        android:id="@+id/navigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:navigationTitle="用户注册" />

    <com.canplay.milk.view.scrollView.StickyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="49dp"
                android:background="@drawable/btn_rep_1_pic"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="19dp"
                    android:src="@drawable/right2"
                    android:textSize="15sp" />

                <com.canplay.milk.view.ClearEditText
                    android:id="@+id/et_phone"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="手机号"
                    android:inputType="number"
                    android:maxLength="11"
                    android:text=""
                    android:textColor="#9fa0a0"
                    android:textColorHint="#bdbdbd"
                    android:textSize="15.5sp" />

                <ImageView
                    android:visibility="gone"
                    android:id="@+id/iv_gou"
                    android:layout_width="20dp"
                    android:layout_height="21dp"
                    android:layout_marginRight="11dp"
                    android:src="@drawable/gou" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_rep_1_pic"

                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="19dp"
                    android:src="@drawable/right3"
                    android:textSize="15sp" />

                <com.canplay.milk.view.ClearEditText
                    android:id="@+id/et_code"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入6位数验证码"
                    android:inputType="number"
                    android:maxLength="6"
                    android:text=""
                    android:textColor="#9fa0a0"
                    android:textColorHint="#bdbdbd"
                    android:textSize="15.5sp" />

                <TextView
                    android:id="@+id/tv_getcode"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/login_selectors"
                    android:gravity="center"
                    android:padding="7dp"
                    android:text="获取验证码"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_rep_1_pic"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="19dp"
                    android:src="@drawable/right1"
                    android:textSize="15sp" />

                <com.canplay.milk.view.ClearEditText
                    android:id="@+id/et_pass"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="输入密码（建议数字与字母结合）"
                    android:inputType="textPassword"
                    android:text=""
                    android:textColor="#9fa0a0"
                    android:textColorHint="#bdbdbd"
                    android:textSize="15.5sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_rep_1_pic"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="19dp"
                    android:src="@drawable/right1"
                    android:textSize="15sp" />

                <com.canplay.milk.view.ClearEditText
                    android:id="@+id/et_user"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="再次确认密码"
                    android:inputType="textPassword"
                    android:text=""
                    android:textColor="#9fa0a0"
                    android:textColorHint="#bdbdbd"
                    android:textSize="15.5sp" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.canplay.milk.view.MCheckBox
                    app:isCheckeds="true"
                    android:id="@+id/iv_choose"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:clickable="false"
                    android:padding="10dp"
                    app:drawablechoose="@drawable/btn_rep_sel"
                    app:drawables="@drawable/btn_rep_nor" />

                <TextView
                    android:id="@+id/tv_registered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="同意某某泡奶机公司注册协议"
                    android:textColor="@color/a0"
                    android:textSize="12sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_next"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/login_selector"
                android:gravity="center"
                android:text="下一步"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </com.canplay.milk.view.scrollView.StickyScrollView>


</LinearLayout>
